{% extends 'base.html.twig' %}

{% block title %}#{{ recipe.id ~" "~ recipe.slug }}{% endblock %}

{% block body %}
    {# <h3>
    Bienvenu sur la recette numéro {{ recipe.id }}
    </h3> #}
    <h1>
    {{ recipe.title |title }}
    </h1>
